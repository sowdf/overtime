<%include header.ejs%>
<div class="m_result">
    <h3>今日加班</h3>
    <table>
        <tr>
            <th>姓名</th>
            <th>加班理由</th>
        </tr>
        <%list.forEach(function(doc){%>
        <tr>
            <td><%=doc.name%></td><td><%=doc.reason%></td>
        </tr>
        <%})%>
    </table>
    <div class="m_old">
        <p>查看往期报名：</p>
        <div id="laydate" class="laydate-icon">
        </div>
    </div>

</div>

<%include footer.ejs%>
<script src="/plus/laydate/laydate.js"></script>
<script>

    laydate({
        elem: '#laydate',
        format: 'YYYY-MM-DD', // 分隔符可以任意定义，该例子表示只显示年月
        festival: true, //显示节日
        choose: function(datas){ //选择日期完毕的回调
            $.ajax({
                url : '/getOne',
                type : 'get',
                data : { date : datas},
                dateTpye : 'json',
                success : function(data){
                    console.log(data);
                }
            });
        }
    });
</script>

